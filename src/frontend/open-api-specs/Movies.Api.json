{
  "openapi": "3.1.1",
  "info": {
    "title": "Movies.Api | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:7284/"
    }
  ],
  "paths": {
    "/api/movies": {
      "post": {
        "tags": ["Movies"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MovieCreateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieDetailsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Movies"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MovieDetailsResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/movies/{id}": {
      "get": {
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieDetailsResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/movies/ratings": {
      "post": {
        "tags": ["Movies"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddRatingRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/movies/ratings-channel": {
      "get": {
        "tags": ["Movies"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/event-stream": {
                "schema": {
                  "$ref": "#/components/schemas/SseItemOfAddRatingRequest"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddRatingRequest": {
        "required": ["movie"],
        "type": "object",
        "properties": {
          "movie": {
            "$ref": "#/components/schemas/MovieRatingInfo"
          },
          "rating": {
            "maximum": 5,
            "minimum": 4,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          }
        }
      },
      "CastMember": {
        "required": ["name", "role"],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "role": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          }
        }
      },
      "MovieCreateRequest": {
        "required": ["title", "director", "releaseDate", "genre", "ratings", "duration"],
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "director": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "releaseDate": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          },
          "genre": {
            "$ref": "#/components/schemas/MovieGenre"
          },
          "ratings": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          },
          "cast": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CastMember"
            }
          },
          "duration": {
            "maximum": 500,
            "minimum": 1,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          }
        }
      },
      "MovieDetailsResponse": {
        "required": ["id", "title", "director", "releaseDate", "genre", "ratings", "duration"],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "director": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "releaseDate": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          },
          "genre": {
            "$ref": "#/components/schemas/MovieGenre"
          },
          "ratings": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          },
          "cast": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CastMember"
            }
          },
          "duration": {
            "maximum": 500,
            "minimum": 1,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          }
        }
      },
      "MovieGenre": {
        "enum": ["Comedy", "Action", "Drama", "Horror", "SciFi"]
      },
      "MovieRatingInfo": {
        "required": ["id", "version"],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "version": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": ["integer", "string"],
            "format": "int32"
          }
        }
      },
      "SseItemOfAddRatingRequest": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/AddRatingRequest"
          },
          "eventType": {
            "type": ["null", "string"]
          },
          "eventId": {
            "type": ["null", "string"]
          },
          "reconnectionInterval": {
            "pattern": "^-?(\\d+\\.)?\\d{2}:\\d{2}:\\d{2}(\\.\\d{1,7})?$",
            "type": ["null", "string"]
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Movies"
    }
  ]
}
